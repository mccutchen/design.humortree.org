div#nav ul li.LearnMore a { color: $gold_dark$ !important; }
div#nav ul li.LearnMore span { color: $gold_light$ !important; }
div#nav ul li.LearnMore a:hover {
	background-color: $gold_light$ !important;
	border-left-color: $gold_medium$ !important;
}